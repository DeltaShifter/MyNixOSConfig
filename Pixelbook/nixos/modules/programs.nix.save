{ config, pkgs, ... }:

{
# Install firefox.
  programs.firefox.enable = true;

  services.v2raya.enable = true;
  services.v2raya.cliPackage = pkgs.xray;

  environment.systemPackages = with pkgs; [
    vim
    wget
    git
    starship
    fastfetch
    obsidian
    yazi
    bat
    lsd
    xray
    gparted
    pcmanfm
 ];

  fonts.packages = with pkgs; [
    nerd-fonts.jetbrains-mono
  ];
}
